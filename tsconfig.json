{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2024",
        "moduleResolution": "node",
        "lib": ["DOM", "ES2024"],
        "outDir": "dist",
        "rootDir": ".",
        "declaration": true,
        "emitDeclarationOnly": false,
        "declarationMap": true,
        "strict": true,
        "esModuleInterop": true,
        "allowJs": false,
        "checkJs": false
    },
    "include": ["static/src/**/*.ts"],
    "exclude": ["static/dep/**/*", "static/resources/main.js"]
}
