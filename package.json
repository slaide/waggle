{
    "name": "waggle",
    "version": "1.0.0",
    "description": "rendering framework based on webgl2",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "build:ts": "tsc --project tsconfig.json",
        "bundle": "esbuild static/src/main.ts --bundle --outfile=static/src/bundle.js --platform=browser --target=es2024 --sourcemap --format=esm --minify",
        "build": "npm run build:ts && npm run bundle",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/slaide/waggle.git"
    },
